{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "seats_availability": {
      "type": "integer",
      "minimum": 0
    },
    "flight_code": {
      "type": "string"
    },
    "airline": {
      "type": "string"
    },
    "departure_aiport": {
      "type": "string"
    },
    "destination_airport": {
      "type": "string"
    },
    "aircraft_model": {
      "type": "string"
    },
    "seats_availability": {
      "type": "integer",
      "minimum": 0
    },
    "price": {
      "type": "number",
      "minimum": 0
    },
    "departure_date": {
      "type": "string",
      "format": "string",
	  "pattern" : "^[0-9]{4}-[0-1]{1}[0-9]{1}-[0-3]{1}[0-9]{1} [0-2]{1}[0-9]{1}:[0-6]{1}[0-9]{1}:[0-6]{1}[0-9]{1}(,)*$"    
      
    }
  },
    "required": [
				"flight_code",
              "airline",
              "departure_aiport",
              "destination_airport",
              "departure_date",
              "aircraft_model",
              "seat_availability",
              "price"
			]
}